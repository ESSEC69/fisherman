<div class="container" style= "min-height: 80vh;">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">Edit <%= resource_name.to_s.humanize %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, input_html: { placeholder: "Prénom" } %>
          <%= f.input :last_name, input_html: { placeholder: "Nom" }%>
          <%= f.input :phone_number, input_html: { placeholder: "numero de telephone" } %>
          <%= f.input :description, input_html: { placeholder: "Décrivez vous en quelques mots" } %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :email, required: true, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h3>Supprimer mon compte</h3>
      <p>Mécontent ? <%= link_to "Supprimer mon compte", registration_path(resource_name), method: :delete, data: { confirm: "Êtes-vous sûr ? ", :'confirm-button-text' => 'Oui', :'cancel-button-text' => 'Non', :'confirm-button-color' => '#4AE3B5', text: 'Fisherman: la réference locative des spots de pêche privés', :'image-url' => image_path('logo.png') }%></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
