<% if @user == nil %>
  <h1>Pas encore de user</h1>
  <% else %>
    <div class="flip">
      <div class="card">
        <div class="face front">
          <div class="well well-sm inner">
            <a class="card-link" href="#" ></a>
            <div class="card-front-description">
              <div class="card-title">
                <h2><%= spot.title.capitalize%></h2>
              </div>
            </div>
            <div class="user text-center">
              <%= cl_image_tag(spot.user.photo, :width=>100, :height=>100, :gravity=>"face", :radius=>"max", :crop=>"fill", class: "img-round") %>
            </div>
            <div class="cover" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path spot.photo, :width=>100, :height=>100%>);">
          </div>
        </div>
        </div>

        <div class="face back">
           <div class="well well-sm inner">
             <a class="card-link" href="#" ></a>
             <div class="card-back-description">
               <div class="card-title">
                <p><strong>description:</strong></p>
                <p><em><%= spot.description %></em></p>
                <p><strong>Prix:</strong><em> <%=spot.price_per_day %></em></p>
                <p><strong>Notes:</strong><em></em></p>
               </div>
             </div>

              <ul class="profile list-inline">
                <li>
                  <%= link_to show_user_path(spot.user) do %>
                  <i class="fa fa-user"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to bookings_path(spot.title) do %>
                  <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                  <% end %>
                </li>
              </ul>
             </div>
        </div>
      </div>
    </div>
<% end %>



