<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title).blank? ? "Fisherman" : yield(:title) %></title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="stylesheet" type="text/css" href="dist/sweetalert.css">
    <%= stylesheet_link_tag    'application', media: 'all' %>

  </head>
  <body class="<%= controller_name %>-<%= action_name %>">

    <!-- NavBar -->
    <%= render "welcome/sign_up_modal" %>
    <%= render "welcome/log_in_modal" %>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>

    <!-- Page Body -->
    <div class="container-yield">
      <%= yield %>
    </div>

    <!-- Footer -->
    <%= render 'shared/footer' %>

    <!-- Javascript issues -->
    <%= javascript_include_tag "https://maps.google.com/maps/api/js?libraries=places&sensor=false&key=#{ENV['GOOGLE_API_BROWSER_KEY']}" %>
     <%= javascript_include_tag "https://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js" %>

    <%= javascript_include_tag 'application' %>
    <%= yield :after_js %>

